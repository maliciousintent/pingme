extends layout
block content

  form.form-horizontal(role='form', method='post', action='/add')
    fieldset
    
      .form-group
        label.col-lg-3.control-label Name
        .col-lg-9
          input.form-control(type='text', name='name', placeholder='Unique identifier for this monitor', required)
            
      .form-group
        label.col-lg-3.control-label Website URL
        .col-lg-9
          input.form-control(type='url', name='url', placeholder='Type the URL to ping', required)
        
      .form-group
        .col-lg-12
          button.btn.btn-default.btn-lg.btn-success.pull-right(type='submit')
            span.glyphicon.glyphicon-plus
            | &nbsp;Create

  hr
  
  p.text-center
    strong
      a(href='/list') Current status:
    | &nbsp;
    span.text-danger 0 offline
    |  and 
    span.text-success 1 online